<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.federvieh.ankidroidprovidertest" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".FlashcardListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FlashcardDetailActivity"
            android:label="@string/title_flashcard_detail"
            android:parentActivityName=".FlashcardListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".FlashcardListActivity" />
        </activity>
    </application>

</manifest>
